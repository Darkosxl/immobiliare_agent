# VAPI Tools Server Dockerfile
FROM python:3.12-slim

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

WORKDIR /app

# Install PostgreSQL client libs
RUN apt-get update && \
    apt-get install -y --no-install-recommends libpq-dev && \
    rm -rf /var/lib/apt/lists/*

# Install dependencies
RUN pip install --no-cache-dir fastapi uvicorn psycopg2-binary python-dotenv pydantic

# Copy only what's needed
COPY utils/vapi_tools_server.py ./utils/
COPY utils/database.py ./utils/
COPY utils/__init__.py ./utils/ 2>/dev/null || echo "" > ./utils/__init__.py

ENV PYTHONPATH="/app"

EXPOSE 8080

CMD ["uvicorn", "utils.vapi_tools_server:app", "--host", "0.0.0.0", "--port", "8080"]
